.span-7
  %p
    = f.label :project_id, "Project"
    = f.select :project_id, project_options, :include_blank => true
.span-3
  %p
    = f.label :billing_type, 'Task type'
    = f.select :billing_type, HourLog::BILLING_TYPES, :include_blank => true
.span-3
  %p
    = f.label :minutes, "Minutes worked"
    = f.text_field :minutes, :size => 5
.clear
.span-16
  %p
    = f.label :notes, "Notes on work - will display to client"
    = f.text_area :notes, :rows => 5, :cols => 30
.clear
.span-4
  %p
    = f.label :source, "Log source"
    = f.select :source, %w[ help_system preamp harvest basecamp ], :include_blank => true
.span-4
  %p
    = f.label :agent_id, "Agent"
    = f.select :agent_id, agent_options
.clear
