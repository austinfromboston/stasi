.form-group
  %p
    = f.label :name, "Name"
    = f.text_field :name
  %p
    = f.label :email, "Email"
    = f.text_field :email
  %p
    = f.label :phone, "Phone"
    = f.text_field :phone

.form-group
  %p
    = f.check_box :primary
    = f.label :primary, "Primary Contact"
  %p
    = f.check_box :billable
    = f.label :billable, "Billable Contact"
  %p
    = f.check_box :technical
    = f.label :technical, "Technical Contact"

%p.form-full
  = f.label :project_id, "Project"
  = f.select :project_id, project_options, :include_blank => true
