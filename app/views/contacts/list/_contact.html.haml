%li.standard
  .draggable{ :'data-id' => contact.id }
    - if contact.name
      %h4.name
        = contact.name

    .email
      = contact.email

    - if contact.phone
      .phone
        = contact.phone

    .project
      - if contact.project
        = contact.project.organization

  = render :partial => 'contacts/menu', :locals => { :contact => contact }
  - unless contact.tickets.empty?
    %h4 Tickets Received
    %ul.tickets
      - contact.tickets.each do |ticket|
        %li
          = link_to ticket.subject, ticket_path(ticket), :class => 'ticket_preview_toggle'
          = ticket.created_at.strftime '%Y-%m-%d'
          .preview

